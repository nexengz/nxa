.triangles {
    position: relative;
    height: 120px;
    margin-top: -120px;

    &--second {
        margin-top: 0;
        height: 95px;
        margin-bottom: -95px;
    }

    &__item {
        display: block;
        width: 50%;
        position: absolute;
        height: 100%;
        fill: #fff;
        &--left {
            left: 0;
        }
        &--right {
            right: 0;
        }
    }
}
