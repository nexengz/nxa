-
    var skills = [
        ['frontend', [
            ['HTML5', '-25s'],
            ['CSS3', '-13s'],
            ['JavaScript', '-75s'],
            ['jQuery и Vue.js', '-30s'] ]
        ],
        [ 'workflow', [
            ['GIT', '-13s'],
            ['Terminal', '-25s'],
            ['Gulp', '-50s'],
            ['Webpack', '-40s'] ]
        ]
    ];
section.values
    .container.values__container
        .values__title
            h2.section-title.values__title-text.section-title--small Чем я могу быть вам полезен
            .values__desc
                p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ad consequatur consequuntur facilis nisi, recusandae repellat! Asperiores delectus deserunt distinctio eaque iusto laborum natus nobis odit officiis, qui quidem rerum voluptate?
        ul.user-skills
            each item in skills
                li.user-skills__item.skills-row
                    h3.skills-row__title #{item[0]}
                    ul.skills-row__list
                        each skill in item[1]
                            li.skills-row__item
                                .skill
                                    svg(viewBox="0 0 200 200" preserveAspectRatio="none").skill__shape
                                        defs.defs
                                            linearGradient(x1="0%" y1="50%" x2="100%" y2="100%")#skill__gradient
                                                stop(offset="60%" stop-color="#5500f2").skill__fill--start
                                                stop(offset="100%" stop-color="#ad00ed").skill__fill--stop
                                        circle(
                                            r="67" cx="100" cy="100"
                                        ).skill__circle.skill__circle--under
                                        circle(
                                            r="67" cx="100" cy="100" stroke="url(#skill__gradient)" transform="rotate(-180 100 100)" style=`animation-delay: ${skill[1]};`
                                        ).skill__circle.skill__circle--above
                                    .skill__title #{skill[0]}