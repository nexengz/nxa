script(type="text/x-template")#skills-list
    ul.user-skills
        li.user-skills__item.skills-row(v-for="skill in skills" :key="skill.skillGroup")
            skillsRow(:skill="skill")

script(type="text/x-template")#skills-row
    .skill-row-as
        h3.skills-row__title {{skill.skillsGroup}}
        ul.skills-row__list
            li.skills-row__item(v-for="(skillPercent, skillName) in skill.skills")
                skill(:skillName="skillName" :skillPercent="skillPercent")

script(type="text/x-template")#skill
    .skill
        svg(viewBox="0 0 150 150" preserveAspectRatio="none").skill__shape
            defs.defs
                linearGradient(x1="0%" y1="50%" x2="100%" y2="100%")#skill__gradient
                    stop(offset="60%" stop-color="#5500f2").skill__fill--start
                    stop(offset="100%" stop-color="#ad00ed").skill__fill--stop
            circle(r="65" cx="75" cy="75").skill__circle.skill__circle--under
            circle(r="65" cx="75" cy="75" ref="color-circle" stroke="url(#skill__gradient)" transform="rotate(-180 75 75)").skill__circle.skill__circle--above
        .skill__title {{skillName}}